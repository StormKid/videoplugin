<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@android:color/white"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/px_20"
                  android:paddingRight="@dimen/px_20"
                  android:id="@+id/check_line"
                  android:layout_marginBottom="@dimen/px_10"
                  android:layout_height="@dimen/px_80">
        <TextView android:layout_width="0px"
                  android:layout_weight="1"
                  android:text="是否只显示精品课程"
                  android:gravity="center_vertical"
                  android:textSize="@dimen/px_26"
                  android:textColor="@color/text_666"
                  android:layout_marginRight="@dimen/px_20"
                  android:layout_height="match_parent"/>

        <CheckBox android:layout_width="@dimen/px_80"
                  android:id="@+id/check"
                  android:checked="true"
                  android:layout_height="@dimen/px_80"/>

    </LinearLayout>

    <View style="@style/style_divide"
          android:layout_marginBottom="@dimen/px_10"
    />

    <ExpandableListView android:layout_width="match_parent"
                        android:layout_height="0px"
                         android:layout_weight="1"
                        android:id="@+id/my_cate_groy"
    />


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginBottom="@dimen/px_10"
                  android:layout_height="@dimen/px_80">
        <TextView android:layout_width="0px"
                  android:layout_weight="1"
                  android:textColor="@color/color_main"
                  android:textSize="@dimen/px_30"
                  android:id="@+id/re_set"
                  android:gravity="center"
                  android:layout_marginLeft="@dimen/px_10"
                  android:background="@drawable/shape_no_select"
                  android:text="重置"
                  android:layout_height="match_parent"/>
        <View android:layout_width="@dimen/px_1"
              android:background="@color/line_ccc"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/px_10"
              android:layout_marginRight="@dimen/px_10"
        />
        <TextView android:layout_width="0px"
                  android:layout_weight="1"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/px_30"
                  android:id="@+id/do_now"
                  android:layout_marginRight="@dimen/px_10"
                  android:gravity="center"
                  android:text="确定"
                  android:background="@drawable/shape_buttom"
                  android:layout_height="match_parent"/>

    </LinearLayout>





</LinearLayout>