<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.moudle.ijkplayer.IjkPlayerView android:layout_width="match_parent"
                                        android:layout_height="@dimen/px_400"
                                        android:id="@+id/play_view"
                                        android:layout_marginBottom="@dimen/px_20"
    />

   <ScrollView android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_height="0px">
       <LinearLayout android:layout_width="match_parent"
                     android:orientation="vertical"
                     android:layout_height="match_parent">
           <com.stormkid.videoplugin.widget.SelectTagView android:layout_width="match_parent"
                                                          android:layout_height="wrap_content"
                                                          android:id="@+id/tag_P"
                                                          app:tagTextColor="@color/color_main"
                                                          app:tagBgRes="@drawable/shape_no_select"

           />

       </LinearLayout>

   </ScrollView>

</LinearLayout>