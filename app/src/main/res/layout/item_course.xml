<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.moudle.basetool.ui.AutoCardView android:layout_width="match_parent"
                                         android:padding="@dimen/px_20"
                                         android:layout_margin="@dimen/px_20"
                                         app:cardElevation="0px"
                                         android:foreground="?android:attr/selectableItemBackground"
                                         app:cardCornerRadius="@dimen/px_10"
                                         android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="@dimen/px_160">
                <ImageView android:layout_width="match_parent"
                           android:id="@+id/course_img"
                           android:scaleType="centerCrop"
                           android:src="@mipmap/cl01"
                           android:layout_height="@dimen/px_160"
                />

                <TextView android:layout_width="wrap_content"
                          android:background="@drawable/shape_trans"
                          android:textSize="@dimen/px_22"
                          android:text="课程类型"
                          android:id="@+id/course_type"
                          android:paddingBottom="@dimen/px_5"
                          android:paddingTop="@dimen/px_5"
                          android:paddingRight="@dimen/px_10"
                          android:paddingLeft="@dimen/px_10"
                          android:layout_margin="@dimen/px_10"
                          android:layout_alignParentBottom="true"
                          android:textColor="@android:color/white"
                          android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View style="@style/style_divide"/>

            <TextView android:layout_width="match_parent"
                      android:textColor="@color/text_333"
                      android:textSize="@dimen/px_24"
                      android:maxLines="1"
                      android:paddingTop="@dimen/px_10"
                      android:paddingLeft="@dimen/px_10"
                      android:paddingRight="@dimen/px_10"
                      android:text="课程名称"
                      android:ellipsize="end"
                      android:id="@+id/course_name"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center_vertical"
                          android:paddingTop="@dimen/px_10"
                          android:paddingLeft="@dimen/px_10"
                          android:paddingRight="@dimen/px_10"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/px_30"
                           android:src="@mipmap/school"
                           android:background="@color/color_main"
                           android:layout_height="@dimen/px_30"/>

                <TextView android:layout_width="0px"
                          android:layout_weight="1"
                          android:textColor="@color/text_666"
                          android:textSize="@dimen/px_22"
                          android:maxLines="1"
                          android:gravity="center_vertical"
                          android:text="学校名称"
                          android:ellipsize="end"
                          android:layout_marginLeft="@dimen/px_10"
                          android:id="@+id/school_name"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center_vertical"
                          android:paddingTop="@dimen/px_10"
                          android:paddingLeft="@dimen/px_10"
                          android:paddingRight="@dimen/px_10"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/px_30"
                           android:src="@mipmap/time"
                           android:layout_height="@dimen/px_30"/>

                <TextView android:layout_width="0px"
                          android:layout_weight="1"
                          android:textColor="@color/text_666"
                          android:textSize="@dimen/px_22"
                          android:maxLines="1"
                          android:gravity="center_vertical"
                          android:text="课程开始时间和结束时间"
                          android:ellipsize="end"
                          android:layout_marginLeft="@dimen/px_10"
                          android:id="@+id/course_time"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center_vertical"
                         android:padding="@dimen/px_10"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/px_30"
                           android:src="@mipmap/people"
                           android:layout_height="@dimen/px_30"/>

                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/text_666"
                          android:textSize="@dimen/px_22"
                          android:maxLines="1"
                          android:gravity="center_vertical"
                          android:text="0"
                          android:id="@+id/watch_people"
                          android:ellipsize="end"
                          android:layout_marginLeft="@dimen/px_10"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_width="@dimen/px_30"
                           android:src="@mipmap/comment"
                           android:layout_marginLeft="@dimen/px_10"
                           android:layout_height="@dimen/px_30"/>

                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/text_666"
                          android:textSize="@dimen/px_22"
                          android:maxLines="1"
                          android:gravity="center_vertical"
                          android:text="0"
                          android:id="@+id/comments"
                          android:ellipsize="end"
                          android:layout_marginLeft="@dimen/px_10"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.moudle.basetool.ui.AutoCardView>


    <TextView android:layout_width="wrap_content"
              android:background="@drawable/shape_login"
              android:text="精品课程"
              android:id="@+id/jingping"
              android:layout_margin="@dimen/px_10"
              android:paddingLeft="@dimen/px_10"
              android:paddingRight="@dimen/px_10"
              android:paddingTop="@dimen/px_5"
              android:paddingBottom="@dimen/px_5"
              android:textSize="@dimen/px_26"
              android:textColor="@android:color/white"
              android:layout_height="wrap_content"/>
</RelativeLayout>