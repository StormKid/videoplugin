<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             >

    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/color_main"
                  android:gravity="center_vertical"
                  android:id="@+id/slide_head"
                  android:padding="@dimen/px_20"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="@dimen/px_120"
                   android:id="@+id/people_img"
                   android:layout_height="@dimen/px_120" />


        <LinearLayout android:layout_width="0px"
                      android:paddingLeft="@dimen/px_20"
                      android:gravity="center_vertical"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="@dimen/px_24"
                      android:id="@+id/nick_name"
                      android:textColor="@android:color/white"
                      android:text="昵称"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="@dimen/px_24"
                      android:id="@+id/sex_category"
                      android:layout_marginTop="@dimen/px_20"
                      android:layout_marginBottom="@dimen/px_5"
                      android:textColor="@android:color/white"
                      android:text="性别"
            />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>